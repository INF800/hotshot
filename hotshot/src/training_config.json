{
    "good_bad_antenna_classification": {
        "metadata":{
            "tag": "v0.0.1",
            "description": "Good / Bad antenna classification"
        },

        
        "input_dataset": {
            "type": "image_classification",
            "classes": {
                "images_dir": "inputs/good_bad_antenna_classification/data",
                "class_names": [
                    "Good Antenna",
                    "Bad Antenna"
                ]       
            },
            "split": {
                "shuffle": true,
                "ratio": {
                    "train": 0.7,
                    "test": 0.10,
                    "holdout": 0.20
                }
            },
            "preprocessing": {
                "n_channels": 3,
                "transforms": [{
                        "name": "ToTensor"
                    },{
                        "name": "Normalize",
                        "params": {
                            "mean": 0.28604059698879553,
                            "std": 0.35302424451492237
                        }
                    }]
            }
        },


        "output":{
            "dir": "outputs/good_bad_antenna_classification",
            "save_model": true,
            "embedding_plots": true,
            "confusion_matrix": true,
            "metrics": {
                "precision": true,
                "recall": true
            },
            "write_image_prediction": {
                "train": true,
                "test": true,
                "holdout": true
            }
        },



        "experiments": {
            "model": {
                "architecture": "SiameseNet",
                "embedding_network": {
                    "name": "default_embedding_network",
                    "params": {
                        "in_channels": 3
                    }
                }
            },
            "n_epochs": 30,
            "batch_size": 8,
            "log_interval": 10,
            "loss": {
                "name": "TripletLoss",
                "params": {
                    "margin": 1.0
                }
            },
            "optimizer": {
                "name": "Adam",
                "params": {
                    "lr": 1e-3
                }
            },
            "scheduler": {
                "name": "StepLR",
                "params": {
                    "step_size": 8, 
                    "gamma": 0.1, 
                    "last_epoch": -1,
                    "verbose": true
                }
            }
        }


    }
}